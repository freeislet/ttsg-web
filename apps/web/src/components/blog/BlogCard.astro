---
import type { Category } from '@/types/blog'
import { categoryData } from '@/types/blog'

export interface Props {
  title: string
  description: string
  pubDate: Date
  category: Category
  tags: string[]
  slug: string
  heroImage?: string
  featured?: boolean
}

const {
  title,
  description,
  pubDate,
  category,
  tags,
  slug,
  heroImage,
  featured = false,
} = Astro.props

---

<a href={`/blog/${slug}`} class="block h-full">
  <article
    class={`
    group relative bg-white rounded-lg shadow-sm hover:shadow-md transition-all duration-200 overflow-hidden h-full flex flex-col
    ${featured ? 'ring-2 ring-blue-500 ring-opacity-50' : ''}
  `}
  >
    <!-- 추천 포스트 배지 -->
    {
      featured && (
        <div class="absolute top-3 right-3 z-10">
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-600 text-white">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            추천
          </span>
        </div>
      )
    }

    <!-- 대표 이미지 -->
    {
      heroImage ? (
        <div class="aspect-video overflow-hidden relative">
          <!-- 흐릿한 배경 이미지 (cover) -->
          <div 
            class="absolute inset-0 bg-cover bg-center blur-sm scale-110 opacity-30"
            style={`background-image: url(${heroImage})`}
          ></div>
          <!-- 메인 이미지 (contain) -->
          <img
            src={heroImage}
            alt={title}
            class="relative z-0 w-full h-full object-contain group-hover:scale-105 transition-transform duration-200"
          />
        </div>
      ) : (
        <div class="aspect-video bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
          </svg>
        </div>
      )
    }

    <!-- 카드 내용 -->
    <div class="p-6 flex-1 flex flex-col">
      <!-- 카테고리 및 날짜 -->
      <div class="flex items-center justify-between mb-3">
        <span
          class={`inline-block px-2 py-1 text-xs font-medium rounded-full ${categoryData[category].style}`}
        >
          {categoryData[category].name}
        </span>
        <time class="text-sm text-gray-500" datetime={pubDate.toISOString()}>
          {pubDate.toLocaleDateString('ko-KR')}
        </time>
      </div>

      <!-- 제목 -->
      <h3
        class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors duration-200 line-clamp-2"
      >
        {title}
      </h3>

      <!-- 설명 -->
      <p class="text-gray-600 text-sm leading-relaxed mb-4 line-clamp-3 flex-1">
        {description}
      </p>

      <!-- 태그 -->
      {
        tags.length > 0 && (
          <div class="flex flex-wrap gap-1 mb-4">
            {tags.slice(0, 3).map((tag) => (
              <span class="inline-block px-2 py-1 text-xs font-medium bg-gray-100 text-gray-600 rounded">
                #{tag}
              </span>
            ))}
            {tags.length > 3 && (
              <span class="inline-block px-2 py-1 text-xs font-medium bg-gray-100 text-gray-600 rounded">
                +{tags.length - 3}
              </span>
            )}
          </div>
        )
      }

      <!-- 더 읽기 링크 -->
      <div class="flex items-center text-sm font-medium text-blue-600 group-hover:text-blue-800 mt-auto">
        더 읽기
        <svg
          class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
          ></path>
        </svg>
      </div>
    </div>
  </article>
</a>
