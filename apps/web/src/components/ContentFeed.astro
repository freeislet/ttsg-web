<script>
  // 탭 전환 기능
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('[data-tab]')
    const tabContents = document.querySelectorAll('.tab-content')

    tabs.forEach((tab) => {
      tab.addEventListener('click', () => {
        // 모든 탭에서 active 스타일 제거하고 기본 스타일 적용
        tabs.forEach((t) => {
          t.classList.remove('bg-blue-600')
          t.classList.remove('text-white')
          t.classList.add('bg-gray-200')
          t.classList.add('text-gray-600')
          t.classList.add('hover:bg-gray-300')
        })

        // 클릭한 탭에 active 스타일 적용
        tab.classList.remove('bg-gray-200')
        tab.classList.remove('text-gray-600')
        tab.classList.remove('hover:bg-gray-300')
        tab.classList.add('bg-blue-600')
        tab.classList.add('text-white')

        // 모든 콘텐츠 숨기기
        tabContents.forEach((content) => content.classList.add('hidden'))

        // 선택한 탭에 해당하는 콘텐츠 표시
        const tabId = tab.getAttribute('data-tab')
        const selectedContent = document.getElementById(`${tabId}-content`)
        if (selectedContent) {
          selectedContent.classList.remove('hidden')
        }
      })
    })
  })
</script>
