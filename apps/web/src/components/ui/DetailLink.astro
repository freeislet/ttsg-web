---
// DetailLink.astro - 자세히 보기 링크 컴포넌트

import { Icon } from 'astro-icon/components'

interface Props {
  href: string
  text?: string
}

const { href, text = '자세히 보기' } = Astro.props
---

<a
  href={href}
  class="inline-flex items-center text-blue-600 font-semibold hover:text-blue-700 transition-all duration-300 group"
>
  {text}
  <Icon name="mdi:arrow-right" class="size-5 ml-2 group-hover:ml-3 transition-all duration-300" />
</a>
