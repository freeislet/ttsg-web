# ==============================================================================
# Outline 기본 설정
# ==============================================================================
# 애플리케이션 URL (Fly.io 배포 시 실제 도메인으로 변경 필요)
URL=https://ttsg-wiki.fly.dev

# 시크릿 키 (실제 배포 시 강력한 랜덤 문자열로 변경 필요)
SECRET_KEY=change_me_to_a_random_string
UTILS_SECRET=change_me_to_another_random_string

# 실행 모드
NODE_ENV=production

# 서버 포트
PORT=8080

# ==============================================================================
# 데이터베이스 설정 (Fly.io 내부 PostgreSQL 사용 시)
# ==============================================================================
DATABASE_URL=postgres://postgres:postgres@ttsg-wiki-db.internal:5432/outline
DATABASE_CONNECTION_POOL_MIN=1
DATABASE_CONNECTION_POOL_MAX=5

# ==============================================================================
# Redis 설정 (Fly.io 내부 Redis 사용 시)
# ==============================================================================
REDIS_URL=redis://ttsg-wiki-redis.internal:6379

# ==============================================================================
# 스토리지 설정 (AWS S3 또는 호환 가능한 서비스)
# ==============================================================================
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=ap-northeast-1
AWS_S3_UPLOAD_BUCKET_NAME=ttsg-wiki
AWS_S3_UPLOAD_MAX_SIZE=26214400
AWS_S3_FORCE_PATH_STYLE=true

# ==============================================================================
# 인증 설정
# ==============================================================================
# Google OAuth (옵션)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Generic OIDC (옵션)
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_AUTH_URI=
OIDC_TOKEN_URI=
OIDC_USERINFO_URI=

# SMTP 설정 (이메일 발송용)
SMTP_HOST=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_SECURE=true

# 로그 설정
DEBUG=
LOG_LEVEL=info
